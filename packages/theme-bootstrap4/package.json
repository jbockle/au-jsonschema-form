    "html-loader-jest": "^0.2.1",
    "jest": "^25.1.0",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3",
    "cpx": "^1.5.0",
    "rimraf": "^3.0.2",
    "eslint": "^6.8.0",
    "npm-run-all": "^4.1.5",
