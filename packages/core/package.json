    "@types/lodash": "^4.14.149",
    "@types/jest": "^25.1.1",
    "ts-jest": "^25.2.0",
    "html-loader-jest": "^0.2.1",
    "jest": "^25.1.0",
    "typescript": "^3.7.5",
    "cpx": "^1.5.0",
    "rimraf": "^3.0.0",
    "eslint": "^6.8.0",
    "npm-run-all": "^4.1.5"
  }
}
