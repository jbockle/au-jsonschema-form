{
  "name": "@aujsf/core",
  "description": "Create forms based on JSON Schema!",
  "author": "jbockle",
  "version": "0.3.2",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "aurelia",
    "json schema",
    "form",
    "forms",
    "form builder",
    "aujsf",
    "ajsf"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jbockle/au-jsonschema-form.git",
    "directory": "packages/core"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prebuild": "rimraf dist/*",
    "clean": "rimraf dist/* coverage/*",
    "build:tsc": "tsc -b tsconfig.build.json",
    "build:static": "cpy \"**/*.html\" \"../dist/\" --cwd=src --parents",
    "build": "npm-run-all build:*",
    "prebuild-watch": "npm run clean",
    "build-watch": "npm-run-all --parallel \"build:* -- --watch\"",
    "pretest": "npm run clean",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "lint": "eslint src/**/*.ts",
    "predocs": "rimraf ../examples/static/api/core",
    "docs": "typedoc --options ../typedoc.json --out ../examples/static/api/core src"
  },
  "peerDependencies": {
    "ajv": "^6.12.6",
    "aurelia-framework": "^1.3.1",
    "aurelia-logging": "^1.5.2",
    "aurelia-templating-resources": "^1.13.1",
    "jsonpointerx": "^1.0.30"
  },
  "devDependencies": {
    "@aujsf/test": "^0.3.0",
    "@types/jest": "^26.0.20",
    "ajv": "^6.12.6",
    "aurelia-bootstrapper": "^2.3.3",
    "aurelia-framework": "^1.3.1",
    "aurelia-loader-nodejs": "^1.1.0",
    "aurelia-logging": "^1.5.2",
    "aurelia-pal-nodejs": "2.0.0",
    "aurelia-polyfills": "^1.3.4",
    "aurelia-templating-resources": "^1.13.1",
    "cpy-cli": "^3.1.1",
    "eslint": "^7.17.0",
    "html-loader-jest": "^0.2.1",
    "jest": "^26.6.3",
    "jsonpointerx": "^1.0.30",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "typedoc": "^0.20.14",
    "typescript": "^4.1.3"
  }
}
