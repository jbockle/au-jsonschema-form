{
  "name": "@aujsf/core",
  "description": "Create forms based on JSON Schema!",
  "author": "jbockle",
  "version": "0.0.5",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "aurelia",
    "json schema",
    "form",
    "forms",
    "form builder",
    "aujsf",
    "ajsf"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jbockle/au-jsonschema-form.git",
    "directory": "packages/core"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prebuild": "rimraf dist/*",
    "clean": "rimraf dist/* coverage/*",
    "build:tsc": "tsc -b tsconfig.build.json",
    "build:static": "cpx src/**/*.{html,css} dist",
    "build": "npm-run-all build:*",
    "prebuild-watch": "npm run clean",
    "build-watch": "npm-run-all --parallel \"build:* -- --watch\"",
    "pretest": "npm run clean",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "lint": "eslint src/**/*.ts"
  },
  "dependencies": {
    "ajv": "^6.12.3",
    "aurelia-framework": "^1.3.1",
    "aurelia-logging": "^1.5.2",
    "jsonpointerx": "^1.0.29"
  },
  "devDependencies": {
    "cpx": "^1.5.0",
    "eslint": "^7.5.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^3.9.7"
  }
}
