{
  "model": {
    "global": {
      "user": {
        "userName": "foo"
      }
    }
  },
  "uiSchema": {
    "ui:title": "Test",
    "global": {
      "user": {
        "phoneNumbers": {
          "ui:canReorder": false
        }
      }
    }
  },
  "schema": {
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
      "global": {
        "title": "Global settings",
        "type": "object",
        "properties": {
          "user": {
            "type": "object",
            "properties": {
              "userName": {
                "type": "string"
              },
              "email": {
                "type": "string",
                "format": "email"
              },
              "age": {
                "type": "number"
              },
              "phoneNumbers": {
                "type": "array",
                "default": [
                  ""
                ],
                "items": {
                  "type": "number",
                  "maximum": 10
                }
              },
              "addresses": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "street": {
                      "type": "string"
                    },
                    "city": {
                      "type": "string"
                    },
                    "state": {
                      "type": "string",
                      "enum": [
                        "DC",
                        "MD",
                        "VA",
                        "TX",
                        "AZ",
                        "NY"
                      ]
                    }
                  },
                  "required": [
                    "street",
                    "city",
                    "state"
                  ]
                }
              }
            },
            "required": [
              "age"
            ]
          },
          "editor": {
            "type": "object",
            "properties": {
              "preferredLanguage": {
                "type": "string",
                "enum": [
                  "typescript",
                  "javascript"
                ],
                "default": "typescript"
              },
              "rememberTabs": {
                "type": "boolean",
                "default": true
              }
            }
          }
        }
      },
      "project": {
        "title": "Project settings",
        "type": "object",
        "properties": {
          "exclusionMethod": {
            "oneOf": [
              {
                "title": "By exclusion file",
                "type": "string",
                "enum": [
                  ".gitignore",
                  ".npmignore"
                ]
              },
              {
                "title": "By glob patterns",
                "type": "array",
                "items": {
                  "type": "string"
                },
                "minItems": 1
              }
            ]
          },
          "timeoutInterval": {
            "type": "number",
            "default": 120000,
            "minimum": 0
          }
        },
        "required": [
          "exclusionMethod"
        ]
      }
    }
  }
}
