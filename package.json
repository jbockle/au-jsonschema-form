{
  "name": "au-jsonschema-form",
  "private": true,
  "scripts": {
    "build": "lerna run build --stream",
    "docs": "lerna run docs --parallel --stream",
    "clean": "lerna clean -y",
    "postclean": "rimraf packages/**/package-lock.json",
    "test": "lerna exec -- npm test",
    "lint": "lerna run lint --parallel --stream",
    "start": "lerna exec --scope examples -- npm start",
    "prepublish:patch": "npm run build",
    "publish:patch": "lerna publish patch -y --conventional-commits --create-release github",
    "bootstrap": "lerna bootstrap"
  },
  "husky": {
    "hooks": {
      "post-checkout": "npm ci",
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^7.7.0",
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "lerna-audit": "^1.2.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.2"
  }
}
